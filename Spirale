#include<math.h>
#include<time.h>
#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#define N 14

main() 
{ 
////////////
//Cornice3//
////////////

//dichiarazione delle variabili
int a[N][N]; //dichiarazione della matrice
int n; //dimensione della matrice
int i; //indice ciclo for per le righe
int j; //indice ciclo for per le colonne


srand(time(NULL)); //generatore di numeri casuali

//inserimento della dimensione della matrice quadratica con controllo di validit√†

	//Il limite serve ad evitare errori di visualizzazione
 	do {
   		 printf("Dammi la dimensione della matrice quadrata (<=14) ");
    	 scanf("%d", &n);
    	 if(n>N)
    	  	{
    	  	  printf("il numero non deve superare %d\n", N);
			}		
       } while ((n>N)|| (n<1));
       
       
       for (i=0;i<n;i++) 
	{
   	 
   		 for(j=0;j<n;j++) 
			{
        		 a[i][j]=0;           
    		}   
 	}
 
 int x=1;  
 int h =0;
 i=0;
 j=0; 
//caricamento dei dati nella matrice 

 for(h=0;h<(n/2);h++)
	{
		i=h;
		for (j=h;j<(n-h);j++) 
			{
				a[i][j]=x;
				x++;
			}
			
		x--;
		j=n-h-1;
		for(i=h;i<(n-h);i++)
			{
				a[i][j]=x;
				x++;
			}
			
	    x--;
		i=n-h-1;	
		for (j=(n-h-1);j>=h;j--) 
		    {
				a[i][j]=x;
				x++;
			}
			
		x--;
		j=h;
		for(i=(n-h-1);i>h;i--)
			{
				a[i][j]=x;
				x++;
			}
		
	}
	
	if(n%2!=0)
	{
		a[n/2][n/2]=x;
	}
	
	
	
//stampa dei dati della matrice
printf("\nDati presenti nella matrice \n");
for (i=0;i<n;i++) 
	{
   	 printf("\n");
   		 for(j=0;j<n;j++) 
			{
        	printf("\t%d", a[i][j]);	            
    		}   
 	}
 		
		
	
}
